<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="410dp"
    android:layout_height="wrap_content"
    android:background="@color/colorRecycler"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="title"
        android:textSize="20dp"
        android:textColor="@color/colorSecondary"
        />

    <TextView
        android:id="@+id/dialog_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="left"
        android:text="textView"
        android:textSize="15dp"
        android:textColor="@color/colorBlack"
        />


        <EditText
            android:id="@+id/dialog_edit"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/input_dialog"
            android:hint="Hij"
            android:paddingLeft="10dp"
            android:textSize="25sp"/>

    <TextView
        android:id="@+id/shortName_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="left"
        android:text="Short Name"
        android:textSize="15dp"
        android:textColor="@color/colorBlack"
        />


        <EditText
            android:id="@+id/shortName_edit"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/input_dialog"
            android:hint="Hij"
            android:paddingLeft="10dp"
            android:textSize="25sp"/>

    <TextView
        android:id="@+id/stateCode_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="left"
        android:text="State Code"
        android:textSize="15dp"
        android:textColor="@color/colorBlack"
        android:visibility="gone"

        />


    <EditText
        android:id="@+id/stateCode_edit"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/input_dialog"
        android:hint="enter state code"
        android:paddingLeft="10dp"
        android:textSize="25sp"
        android:visibility="gone"
        />


    <TextView
        android:id="@+id/pinCode_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="left"
        android:text="Pin Code"
        android:textSize="15dp"
        android:textColor="@color/colorBlack"
        android:visibility="gone"
        />


    <EditText
        android:id="@+id/pinCode_edit"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/input_dialog"
        android:hint="enter pincode"
        android:paddingLeft="10dp"
        android:textSize="25sp"
        android:visibility="gone"
        />




    <Button
        android:id="@+id/dialog_save"
        android:layout_width="138dp"
        android:layout_height="35dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center"
        android:background="@drawable/button_bckg"
        android:text="Save"
        android:textColor="@color/colorBackground"/>


    </LinearLayout>



    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:foregroundGravity="center"
        android:visibility="invisible"/>

</RelativeLayout>